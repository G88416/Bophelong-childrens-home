rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: only authenticated users may access data
    function isAuthenticated() {
      return request.auth != null;
    }

    // Children records
    match /children/{childId} {
      allow read, write: if isAuthenticated();
    }

    // Medical records
    match /medical/{recordId} {
      allow read, write: if isAuthenticated();
    }

    // Vaccination records
    match /vaccines/{recordId} {
      allow read, write: if isAuthenticated();
    }

    // Staff records
    match /staff/{staffId} {
      allow read, write: if isAuthenticated();
    }

    // Donation records
    match /donations/{donationId} {
      allow read, write: if isAuthenticated();
    }

    // Adoption records
    match /adoptions/{adoptionId} {
      allow read, write: if isAuthenticated();
    }

    // Events
    match /events/{eventId} {
      allow read, write: if isAuthenticated();
    }

    // Inventory items
    match /inventory/{itemId} {
      allow read, write: if isAuthenticated();
    }

    // Finance – income records
    match /income/{recordId} {
      allow read, write: if isAuthenticated();
    }

    // Finance – expense records
    match /expenses/{recordId} {
      allow read, write: if isAuthenticated();
    }

    // User profiles and roles
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Organisation settings (single document per key)
    match /settings/{key} {
      allow read, write: if isAuthenticated();
    }
  }
}
